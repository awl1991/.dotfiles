{
    // *!== --> Window Title <-- !==*
    "window.title": "~/${rootName} ￫ ${activeEditorShort}  ",
    "window.zoomLevel": 0,
    "telemetry.enableTelemetry": false,
    // --> Customize UI Plugin
    "customizeUI.font.regular": "Avenir Next",
    "customizeUI.font.monospace": "FiraCode Nerd Font",
    "customizeUI.titleBar": "inline",
    // --> VSCode Editor <--
    "git-graph.showStatusBarItem": true,
    "activitusbar.views": [
        {
            "name": "explorer",
            "codicon": "folder"
        },
        {
            "name": "extensions",
            "codicon": "extensions"
        },
        {
            "name": "search",
            "codicon": "search"
        }
    ],
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontLigatures": true,
    "editor.fontSize": 13, // Medium
    "editor.formatOnPaste": true,
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.matchBrackets": "always",
    "editor.suggest.maxVisibleSuggestions": 5,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {},
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\\\|;:'\\\",.<>/? •",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderControlCharacters": true,
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",
    "editor.scrollBeyondLastColumn": 100,
    "editor.quickSuggestionsDelay": 1500,
    "editor.quickSuggestions": {
        "other": false,
        "comments": false,
        "strings": false
    },
    // --> File Defaults <--
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.enabled": true,
    "search.useIgnoreFiles": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "zenMode.hideLineNumbers": false,
    "explorer.openEditors.visible": 5,
    "workbench.editor.labelFormat": "medium",
    "workbench.editor.restoreViewState": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "vscode-unfancy-file-icons",
    "workbench.statusBar.visible": true,
    "workbench.startupEditor": "newUntitledFile",
    // --> Bracket Colorizer 2 <--
    // "bracket-pair-colorizer-2.showBracketsInGutter": true,
    // "bracket-pair-colorizer-2.rulerPosition": "Full",
    // "bracket-pair-colorizer-2.colorMode": "Independent",
    // "bracket-pair-colorizer-2.showBracketsInRuler": true,
    // "bracket-pair-colorizer-2.highlightActiveScope": true,
    // --> Path Intellisense <--
    "path-intellisense.extensionOnImport": true,
    // --> Color Highlight <--
    "color-highlight.markRuler": false,
    // --> Live Server <--
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    // --> Github <--
    "git.autoRepositoryDetection": false,
    // ~~> [ Saved Defaults ] <~~
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDragAndDrop": false,
    "files.eol": "\n",
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "git.decorations.enabled": false,
    "scm.diffDecorationsGutterWidth": 1,
    "scm.diffDecorations": "none",
    "html.format.wrapLineLength": 100,
    "html.format.wrapAttributes": "force-aligned",
    // --> Shellscript
    "[shellscript]": {
        "editor.defaultFormatter": "eetami.whitespace-formatter"
    },
    // Prettier Code Format
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.fontLigatures": "'ss02', 'ss19'"
    },
    "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "prettier.semi": false,
    "explorer.confirmDelete": false,
    "git.enabled": false,
    "material-icon-theme.activeIconPack": "react",
    "oneDarkPro.editorTheme": "panda",
    "update.mode": "start",
    "materialTheme.accent": "Graphite",
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "react-native-tools.projectRoot": "/Users/awl/Desktop/Code/rcvpro",
    "eslint.enable": false,
    "eslint.quiet": true,
    "liveServer.settings.CustomBrowser": "chrome",
    "files.associations": {
        "*.php": "php",
        "*.txt": "ignore"
    },
    // -- Material Icon theme
    "material-icon-theme.hidesExplorerArrows": true,
    "terminal.integrated.experimentalUseTitleEvent": true,
    // --> Tabulous Terminal tabs
    "tabulous.activeTabColor": "#95C7AE",
    // >>=*=> Integrated Terminal <==*=<<
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "terminal.integrated.cursorStyle": "line",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.shellArgs.osx": [
        "-l"
    ],
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.env.osx": {
        "PATH": "...:/usr/bin:/bin:..."
    },
    "terminal.explorerKind": "external",
    "terminal.integrated.experimentalRefreshOnResume": true,
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.macOptionClickForcesSelection": true,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.lineHeight": 1.1,
    "window.restoreWindows": "none",
    "editor.scrollBeyondLastLine": false,
    "workbench.fontAliasing": "antialiased",
    "prettier.useEditorConfig": false,
    "editor.formatOnSave": true,
    "prettier.useTabs": true,
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[svg]": {
        "editor.defaultFormatter": "jock.svg"
    },
    "workbench.colorTheme": "One Dark Pro",
    "customizeUI.activityBar": "regular",
    "window.titleBarStyle": "native",
    "material-icon-theme.folders.color": "#667681",
    "material-icon-theme.folders.theme": "classic",
    "currentPath.useAbsolutePath": true,
    "activitusbar.activeColour": "#8AC5AB",
    "activitusbar.priority": 1,
}
